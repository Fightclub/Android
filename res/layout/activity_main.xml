<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">
        <LinearLayout
            android:id="@+id/headerbar"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="#8800ff00"
            android:layout_height="48dp"
            android:layout_below="@+id/content"
            android:layout_alignParentTop="true">
                 <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher"
                    android:gravity="right"
                    android:layout_weight="1"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff000000"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:text="MY TITLE BAR"
                    android:layout_weight="3"/>
                    
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:src="@drawable/ic_action_search"
                    android:layout_weight="1"/>
        </LinearLayout>
        
        
        <ScrollView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
            <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="#000000"
	            android:text="qerqewrqewrqwe rqewrqwer qwerqwer qwerqwerqwerqewrqwer qwerqwerhelkjalsdkfjlaksd;flaksdj;fklajsd;klga;sldkg;alksdjf;lkah;lwkga;slkdgh;klasdj flkasdjf;lkasdj lk  aklsdj;   lksdj;af"
	            android:textSize="50sp"/>

            
        </ScrollView>
        
        
        <LinearLayout
            android:id="@+id/footerbar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_above="@+id/content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/gift_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="#8800ff00"
                android:textColor="#ff000000"
                android:layout_weight="1"
                android:text="@string/gifts"/>
            <View android:id="@+id/separator" 
                android:background="#000000" 
                android:layout_height = "match_parent"
                android:layout_width="1dp"/>
            <Button
                android:id="@+id/people_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="#8800ff00"
                android:textColor="#ff000000"
                android:layout_weight="1"
                android:text="@string/people"/>
        </LinearLayout>
</RelativeLayout>
